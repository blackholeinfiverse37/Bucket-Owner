{
    "name": "workflow_agent",
    "domains": ["workflow", "optimization"],
    "module_path": "agents.workflow.workflow_agent",
    "capabilities": {
        "chainable": true,
        "memory_access": false
    },
    "input_schema": {
        "required": ["task"],
        "properties": {
            "task": {
                "type": "string",
                "description": "Task or workflow to optimize"
            },
            "priority": {
                "type": "string",
                "description": "Task priority level"
            },
            "schedule": {
                "type": "object",
                "description": "Schedule information from previous agent"
            },
            "workflow_request": {
                "type": "object",
                "description": "Detailed workflow request"
            }
        }
    },
    "output_schema": {
        "properties": {
            "recommendations": {"type": "array", "items": {"type": "string"}},
            "optimization_plan": {"type": "object"},
            "implementation_steps": {"type": "array"},
            "expected_benefits": {"type": "object"}
        }
    },
    "sample_input": {
        "task": "Optimize workflow processes",
        "priority": "high"
    },
    "sample_output": {
        "recommendations": [
            "Implement automated invoice processing",
            "Use OCR for data extraction",
            "Set up approval workflows"
        ],
        "optimization_plan": {
            "timeline": "3 months",
            "resources_needed": ["Software", "Training"],
            "expected_savings": "40% time reduction"
        }
    }
}